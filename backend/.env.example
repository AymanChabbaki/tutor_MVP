# AI Bootcamp Tutor V2 Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ai_bootcamp_tutor_v2

# JWT Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
MAX_TOKENS=1000
TEMPERATURE=0.7

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-flask-secret-key-change-in-production
DEBUG=True
PORT=5000
HOST=0.0.0.0

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Security Configuration
BCRYPT_ROUNDS=12

# Session Management Configuration
SESSION_TIMEOUT_HOURS=24
MAX_SESSIONS_PER_USER=100

# Collection Management Configuration
MAX_COLLECTIONS_PER_USER=50
MAX_SESSIONS_PER_COLLECTION=1000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log
